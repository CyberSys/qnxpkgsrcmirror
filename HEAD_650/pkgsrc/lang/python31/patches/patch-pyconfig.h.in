--- pyconfig.h.in.orig	2011-06-11 15:48:52.000000000 +0000
+++ pyconfig.h.in
@@ -1108,6 +1108,9 @@
 /* Define on NetBSD to activate all library features */
 #undef _NETBSD_SOURCE
 
+/* Define on QNX to activate all library features */
